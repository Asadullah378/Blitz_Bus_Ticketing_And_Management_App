<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewComplaintScreen">

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#375f45"
            android:orientation="horizontal"
            android:background="#375f45"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/back_icon"
                app:tint="@color/white"
                android:paddingVertical="11dp"
                android:id="@+id/backBtn"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Complaint Details"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingVertical="10dp"
                android:fontFamily="@font/sansita_regular"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                app:tint="@color/white"
                android:id="@+id/logout"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Complaint"
            android:textColor="#F10000"
            android:textSize="30sp"
            android:id="@+id/complaintType"
            android:fontFamily="@font/sansita_bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Complaint"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/sansita_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#E1DCDC"
                app:cardElevation="6dp"
                >

                <TextView
                    android:id="@+id/complaint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Complaint"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Reply"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/sansita_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/noReplyLayout"
                android:visibility="gone"
             >


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/sleep_icon"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="No Reply Yet"
                    android:textSize="20sp"
                    android:fontFamily="@font/sansita_bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#E1DCDC"
                app:cardElevation="6dp"
                android:id="@+id/replyLayout"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/reply"
                    android:text="Reply"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>