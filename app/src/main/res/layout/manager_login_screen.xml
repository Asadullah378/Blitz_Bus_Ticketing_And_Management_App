<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ManagerLoginScreen">

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/signUpLink"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="Manager Portal"
        android:textColor="@color/black"
        android:fontFamily="@font/sansita_bold"
        android:textSize="32sp"
        android:layout_marginTop="15dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        app:srcCompat="@drawable/logo_without_label" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/black"
        android:fontFamily="@font/sansita_bold"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E1DCDC"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
      >

        <EditText
            android:id="@+id/manager_signin_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:background="@null"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="#656060" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#E1DCDC"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp">

        <EditText
            android:id="@+id/manager_signin_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@null"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="#656060"
          />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="50dp">

        <android.widget.Button
            android:id="@+id/manager_signin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:background="@drawable/gradient"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Sign In"/>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text=""
        android:fontFamily="@font/sansita_bold"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:backgroundTint="@color/white"/>

</LinearLayout>