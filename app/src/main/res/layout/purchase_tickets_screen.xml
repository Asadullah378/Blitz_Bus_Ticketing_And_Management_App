<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseTicketsScreen">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#375f45"
            android:orientation="horizontal"
            android:background="#375f45"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/back_icon"
                app:tint="@color/white"
                android:paddingVertical="11dp"
                android:id="@+id/backBtn"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Confirm Payment"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingVertical="10dp"
                android:fontFamily="@font/sansita_regular"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                app:tint="@color/white"
                android:id="@+id/logout"
                />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="100dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Departure"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/sansita_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Location"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/departLocation"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Date"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:id="@+id/departDate"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Time"
                android:paddingLeft="40dp"
                android:id="@+id/departTime"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Arrival"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/sansita_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Location"
                android:paddingLeft="40dp"
                android:id="@+id/arriLocation"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Date"
                android:id="@+id/arriDate"

                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Time"
                android:paddingLeft="40dp"
                android:id="@+id/arriTime"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Payment"


            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/sansita_bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Total Seats"
                android:id="@+id/totalSeats"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Ticket Price"
                android:id="@+id/seatPrice"

                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Total Payment"
                android:id="@+id/paymentAmount"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/purchaseBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="90dp"
                android:background="@drawable/gradient"
                android:text="Purchase Tickets"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>