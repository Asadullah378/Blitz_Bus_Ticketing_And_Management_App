<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UserSignupScreen">


    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#375f45"
        android:orientation="horizontal"
        android:background="#375f45"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back_icon"
            app:tint="@color/white"
            android:paddingVertical="11dp"
            android:id="@+id/backBtn"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="My Profile"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:fontFamily="@font/sansita_regular"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="5dp"
            app:tint="@color/white"
            android:id="@+id/logout"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        app:srcCompat="@drawable/user_icon" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E1DCDC"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Name"
            android:background="@null"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="#656060"
            android:id="@+id/user_name"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E1DCDC"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        >

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:background="@null"
            android:paddingVertical="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="#656060" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:text="Gender"
        android:gravity="left"
        android:layout_weight="0.5"
        android:textColor="@color/black"
        android:fontFamily="@font/sansita_bold"
        android:textSize="20sp"
        />

    <LinearLayout
        android:id="@+id/gender_icons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="32.5dp"
            android:layout_gravity="center"
            android:id="@+id/female_gender"
            >

            <com.google.android.material.imageview.ShapeableImageView

                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/female_avatar"
                app:shapeAppearanceOverlay="@style/round_small" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="32.5dp"
            android:layout_gravity="center"
            android:id="@+id/male_gender">

            <com.google.android.material.imageview.ShapeableImageView

                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/male_avatar"
                app:shapeAppearanceOverlay="@style/round_small" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="32.5dp"
            android:layout_gravity="center"
            android:id="@+id/other_gender">

            <com.google.android.material.imageview.ShapeableImageView

                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/other_avatar"
                app:shapeAppearanceOverlay="@style/round_small" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="50dp">

        <android.widget.Button
            android:id="@+id/updateProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:background="@drawable/gradient"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Update Profile"/>

    </androidx.cardview.widget.CardView>



</LinearLayout>