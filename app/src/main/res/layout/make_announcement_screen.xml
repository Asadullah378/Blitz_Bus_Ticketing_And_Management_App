<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeAnnouncementScreen">

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#375f45"
            android:orientation="horizontal"
            android:background="#375f45"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/back_icon"
                app:tint="@color/white"
                android:paddingVertical="11dp"
                android:id="@+id/backBtn"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Make Announcement"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingVertical="10dp"
                android:fontFamily="@font/sansita_regular"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                app:tint="@color/white"
                android:id="@+id/logout"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Enter Details"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#000000"
            android:fontFamily="@font/sansita_bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#E1DCDC"
            app:cardElevation="6dp"
            >

            <EditText
                android:id="@+id/announcementTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Announcement Title"
                android:background="@null"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="#656060"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#E1DCDC"
            app:cardElevation="6dp"
            >

            <EditText
                android:id="@+id/announcementDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Announcement Details"
                android:gravity="start"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@null"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="#656060"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/postAnnouncementBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="90dp"
                android:background="@drawable/gradient"
                android:text="Post Announcement"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>