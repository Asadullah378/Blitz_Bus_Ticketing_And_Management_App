<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowShippingScreen">

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#375f45"
            android:orientation="horizontal"
            android:background="#375f45"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/back_icon"
                app:tint="@color/white"
                android:paddingVertical="11dp"
                android:id="@+id/backBtn"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Shipping Details"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingVertical="10dp"
                android:fontFamily="@font/sansita_regular"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                app:tint="@color/white"
                android:id="@+id/logout"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Destination"
                android:paddingLeft="40dp"
                android:id="@+id/shippingDest"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:id="@+id/shippingType"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Checkout Date"
                android:paddingLeft="40dp"
                android:id="@+id/checkoutDate"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Checkout Time"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:id="@+id/checkoutTime"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Delivery Date"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:id="@+id/deliveryDate"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Delivery Time"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:id="@+id/deliveryTime"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Payment"
                android:id="@+id/shippingPrice"
                android:paddingLeft="40dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/sansita_regular"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Items"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/sansita_bold"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/shipItemsRV"
            android:layout_weight="4"/>

    </LinearLayout>



</RelativeLayout>